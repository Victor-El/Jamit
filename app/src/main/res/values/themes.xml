<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Jamit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Jamit.SplashTheme" parent="Theme.Jamit">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <style name="CustomRaveTheme" parent="RaveAppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="OTPButtonStyle">@style/btnStyle</item>
        <item name="PayButtonStyle">@style/btnStyle</item>
        <item name="PinButtonStyle">@style/btnStyle</item>
        <item name="OTPHeaderStyle">@style/otpHeaderStyle2</item>
        <item name="TabLayoutStyle">@style/tabLayoutStyle2</item>
        <item name="PinHeaderStyle">@style/pinHeaderStyle2</item>
        <item name="PaymentTileStyle">@style/newPaymentTileStyle</item>
        <item name="PaymentTileTextStyle">@style/newPaymentTileTextStyle</item>
        <item name="PaymentTileDividerStyle">@style/newPaymentTileDividerStyle</item>
    </style>

    <style name="newPaymentTileTextStyle">
        <item name="android:textColor">#4a4a4a</item>
    </style>

    <style name="newPaymentTileDividerStyle">
        <item name="android:textColor">#4a4a4a</item>
    </style>

    <style name="newPaymentTileStyle">
        <item name="android:background">#99f9a825</item>
    </style>

    <style name="pinHeaderStyle2">
        <item name="android:background">#37474f</item>
    </style>

    <style name="btnStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/shape_rave_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>