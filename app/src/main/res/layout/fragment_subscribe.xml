<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:padding="16dp">

    <TextView
        android:id="@+id/subscription_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Subscribe to our service"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/jamit_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subscription_text"
        app:layout_constraintBottom_toTopOf="@id/subscribe_btn"
        android:src="@drawable/jamit"/>

    <Button
        android:id="@+id/subscribe_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Subscribe"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>